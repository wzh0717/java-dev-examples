<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper>
    <resultMap id="outDepartmentMap" type="com.wangzh.app.weixin.pa.model.entity.SystemInfoEntity">
        <result column="DEPARTMENT_ID" property="departmentID" jdbcType="VARCHAR"/>
        <result  column="DEPARTMENT_NAME" property="departmentName" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="getOutDepartmentInfo" resultMap="outDepartmentMap" parameterType="java.util.HashMap">
        SELECT tcd.DEPARTMENT_ID,tcd.SPELL_CODE || ','|| tcd.DEPARTMENT_NAME AS DEPARTMENT_NAME
        FROM COM_DEPARTMENT tcd
        WHERE tcd.VALID_FLAG='1' AND tcd.BUSINESS_FLAG='1'
        AND tcd.DEPARTMENT_TYPE != 'PI'
        ORDER BY tcd.DEPARTMENT_ID ASC
    </select>


</mapper>